" Global
set encoding=utf8
set autoread            " recargar un arquivo cando se cambia externamente


" UI
syntax enable           " activa o resaltado de sintaxis
"colorscheme desert      " tema do resaltado
set number              " amosa o número de liña
set showcmd             " amosa os comandos na barra inferior
"set cursorline          " highlight current line


" Indentation
set tabstop=4       " número de espazos que le cando hai un TAB
set softtabstop=4   " número de espazos que inserta cando insertamos un TAB
set expandtab       " TABS son espazos
set ai              " Auto indent
set si              " Smart indent
set wrap            " Wrap lines
